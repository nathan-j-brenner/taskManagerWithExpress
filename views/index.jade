extends layout

block content
  .container-fluid
    .row
      .col-md-4.col-md-offset-4
        h1= title
        p This is a tool to help you identify tasks that you need to see are completed.
        p Create a new account to access the features or log in if you're an existing user.
    .row
      .col-md-3.col-md-offset-3
        h2 Log in
        form(method="get")
          input(type="text", placeholder="email")
          br
          input(type="text", placeholder="password")
          br
          input(type='submit', value="submit")
      .col-md-4
        form(method="post")
          h2 Register
          input(type='text', placeholder='email')
          br
          input(type='text', placeholder="password")
          br
          input(type="text", placeholder="password confirmation")
          br
          input(type='submit', value='complete registeration')